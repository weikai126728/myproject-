}

.text_ta textarea {
	width: 69%;
	height: 4rem;
	font-size: 0.6rem;
	margin-left: 0.76rem;
	margin-top: 0.575rem;
	float: left;
	-webkit-tap-highlight-color:transparent;
     			-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
        		tap-highlight-color: rgba(0, 0, 0, 0);
}

.sub {
	width: 14.814rem;
	margin-left: 0.592rem;
	margin-top: 1.185rem;
	margin-bottom: 0.518rem;
	padding-bottom: 2rem;
}

.sub span {
	width: 100%;
	height: 2.044rem;
	border-radius: 0.3rem;
	line-height: 2.044rem;
	background-color: #f84f18;
	color: #FFFFFF;
	font-size: 0.6rem;
	display: inline-block;
	text-align: center;
	margin-top: 1.3rem;
	-webkit-tap-highlight-color:transparent;
     			-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
        		tap-highlight-color: rgba(0, 0, 0, 0);
}

.bbb li em {
	font-size: 0.6rem;
	color: #9F9F9F;
	display:block;
	margin-left: 0.25rem;
	margin-top: 0.5rem;
} 

.clear {
	visibility: hidden;
	width: 4%;
	float: right;
	vertical-align: middle;
	margin-right: 0.5rem;
	margin-top: 0.5rem;
}